                        { "label": "賣出手續費（6折）", "formula": "105,000 × 0.1425% × 0.6", "value": "89.8 元", "highlight": true },
                        { "label": "證交稅", "formula": "105,000 × 0.3%", "value": "315 元", "highlight": true },
